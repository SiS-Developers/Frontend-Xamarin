<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="StockUp.AnalyticsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:microcharts="clr-namespace:Microcharts.Forms;assembly=Microcharts.Forms">
    <ScrollView>
        <StackLayout>
            <Label
                Margin="0,16,0,16"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Style="{StaticResource title}"
                Text="Analytics" />
            <microcharts:ChartView x:Name="barChart" HeightRequest="150" />
            <microcharts:ChartView x:Name="pointChart" HeightRequest="150" />
            <microcharts:ChartView x:Name="lineChart" HeightRequest="150" />
            <microcharts:ChartView x:Name="donutChart" HeightRequest="150" />
            <microcharts:ChartView x:Name="radialGaugeChart" HeightRequest="150" />
            <microcharts:ChartView x:Name="radarChart" HeightRequest="150" />
        </StackLayout>
    </ScrollView>




</ContentPage>
