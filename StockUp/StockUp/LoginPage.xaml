<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="StockUp.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Style="{StaticResource primary-content}">
    <StackLayout Margin="40,100,40,0">
        <Label
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Style="{StaticResource title}"
            Text="StockUp" />

        <StackLayout Margin="10,100,10,0">
            <Entry Placeholder="Store ID" />
            <Entry Placeholder="Employee ID" />
            <Entry IsPassword="True" Placeholder="Password" />
            <Button Clicked="Login_Clicked" Text="login" />
        </StackLayout>
    </StackLayout>
</ContentPage>